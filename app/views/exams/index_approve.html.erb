

<h1>Listing Exams</h1>

<table>
  <thead>
    <tr>
      <th>Language</th>
      <th>Date</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exams.each do |exam| %>
      <tr>
        <td><%= exam.language %></td>
        <td><%= exam.date %></td>
        <td><%= exam.description %></td>
        <td><%= exam.author %></td>
        <td><%= link_to 'Show', exam %></td>
        <% if current_user_can_manage_course(exam.course) %>
          <td><%= link_to 'Edit', edit_exam_path(exam) %></td>
          <td><%= link_to 'Destroy', exam, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Exam', new_exam_path %>
